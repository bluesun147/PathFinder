<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontActivity">
    <!-- ResultActivity -->

    <ImageView
        android:id="@+id/circle"
        android:layout_width="146dp"
        android:layout_height="143dp"
        android:src="@drawable/twocircle" />

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:text="도착역: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="262dp"
        android:layout_marginRight="262dp"
        android:text="출발역: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectYourRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="674dp"
        android:text="원하는 경로를 선택하세요."
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommending_route"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="541dp"
        android:text="추천 경로 🚇"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/printRecommRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recommending_route"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="500dp"
        android:text="경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommCosts"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/recommending_route"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="457dp"
        android:text="소요 시간 0분, 소요 비용 0원" />

    <TextView
        android:id="@+id/time_route"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="370dp"
        android:text="최단 시간🕑"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/printTimeRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time_route"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="333dp"
        android:text="경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeCosts"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/time_route"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="288dp"
        android:text="소요 시간 0분, 소요 비용 0원" />

    <TextView
        android:id="@+id/money_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="225dp"
        android:text="최소 비용💰"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/printMoneyRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/money_route"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="177dp"
        android:text="경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로 - 경로"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moneyCosts"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/printMoneyRoute"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:text="소요 시간 0분, 소요 비용 0원" />



    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignBottom="@+id/circle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="-557dp"
        android:src="@drawable/print_route_button" />
</RelativeLayout>