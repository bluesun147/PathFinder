<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontActivity">

    <ImageView
        android:id="@+id/circle"
        android:layout_width="316dp"
        android:layout_height="137dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="-87dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="593dp"
        android:src="@drawable/twocircle" />

    <ImageView
        android:id="@+id/firstimg"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_alignBottom="@+id/circle"
        android:layout_marginBottom="-285dp"
        android:src="@drawable/firstimg" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignBottom="@+id/firstimg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="-161dp"
        android:src="@drawable/getstarted" />



</RelativeLayout>